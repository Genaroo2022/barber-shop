#!/usr/bin/env bash
set -euo pipefail

if command -v powershell >/dev/null 2>&1; then
  powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/precommit-secret-scan.ps1
elif command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -File ./scripts/precommit-secret-scan.ps1
else
  echo "PowerShell not found. Skipping secret scan." >&2
fi
