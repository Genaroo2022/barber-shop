# Spring profile
SPRING_PROFILES_ACTIVE=prod

# Database
DB_URL=jdbc:postgresql://YOUR_DB_HOST:5432/style_book?sslmode=require
DB_USER=YOUR_DB_USER
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT (base64 of a 256-bit+ random secret)
JWT_SECRET_BASE64=REPLACE_WITH_BASE64_SECRET
JWT_EXPIRATION_SECONDS=28800

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Firebase Authentication (required for /api/auth/login/firebase)
FIREBASE_API_KEY=YOUR_FIREBASE_WEB_API_KEY
FIREBASE_ALLOWED_UIDS=uid_admin_1,uid_admin_2

# WhatsApp Cloud API auto-reply webhook (optional)
WHATSAPP_AUTOREPLY_ENABLED=false
WHATSAPP_WEBHOOK_VERIFY_TOKEN=CHANGE_ME_VERIFY_TOKEN
WHATSAPP_PHONE_NUMBER_ID=YOUR_META_PHONE_NUMBER_ID
WHATSAPP_ACCESS_TOKEN=YOUR_META_TEMP_OR_PERMANENT_TOKEN
WHATSAPP_AUTOREPLY_LOOKBACK_MINUTES=90
WHATSAPP_AUTOREPLY_COOLDOWN_MINUTES=720
WHATSAPP_BUSINESS_TIMEZONE=America/Argentina/Buenos_Aires

# Optional server port
PORT=8080
