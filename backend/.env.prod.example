# Spring profile
SPRING_PROFILES_ACTIVE=prod

# Database
DB_URL=jdbc:postgresql://YOUR_DB_HOST:5432/style_book?sslmode=require
DB_USER=YOUR_DB_USER
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT (base64 of a 256-bit+ random secret)
JWT_SECRET_BASE64=REPLACE_WITH_BASE64_SECRET
JWT_EXPIRATION_SECONDS=28800

# CORS
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Optional server port
PORT=8080
